		WritableRaster raster = img.getRaster();

		BufferedImage img2 = new BufferedImage(img.getColorModel(), raster, true, null);
		Graphics2D g2 = img2.createGraphics();
		reference.assertEquals("constructorWidthRaster", img2);
	}
