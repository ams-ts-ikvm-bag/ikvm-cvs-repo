		private static byte[] GetPublicKey(AssemblyName name)
		{
			StrongNameKeyPair keyPair = name.KeyPair;
			if (keyPair != null)
			{
				return keyPair.PublicKey;
			}
			byte[] key = name.GetPublicKey();
			if (key == null || key.Length == 0)
			{
				return null;
			}
			return key;
