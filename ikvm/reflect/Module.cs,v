		internal Type CanonicalizeType(Type type)
		{
			Type canon;
			if (!universe.canonicalizedTypes.TryGetValue(type, out canon))
			{
				canon = type;
				universe.canonicalizedTypes.Add(canon, canon);
			}
			return canon;
		}

